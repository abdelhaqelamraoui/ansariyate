<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linearLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:paddingTop="2dp"
    android:paddingBottom="2dp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="5dp"
        android:textColor="#0A569A"
        android:textAlignment="center"
        android:fontFamily="@font/almaghribi2"
        android:textSize="20sp"
        android:text="@string/home_title"
        android:textDirection="rtl"
        android:gravity="center" />

    <ListView
        android:id="@+id/listView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="9"
        android:textAlignment="textEnd"
        tools:listitem="@layout/audios_rows"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="1dp" >

    </ListView>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="46dp">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="6dp"
        android:layout_weight="1"
        app:cardCornerRadius="4dp">

        <ImageButton
            android:id="@+id/button_previous"
            tools:srcCompat="@android:drawable/ic_media_previous"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textSize="14sp"
            android:background="@color/uicolor"
            android:contentDescription="Previous" />
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="6dp"
        android:layout_weight="1"
        app:cardCornerRadius="4dp">

        <ImageButton
            android:id="@+id/button_pause"
            tools:srcCompat="@android:drawable/ic_media_play"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/uicolor"
            android:contentDescription="Pause"/>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="6dp"
        android:layout_weight="1"
        app:cardCornerRadius="4dp">


        <ImageButton
            android:id="@+id/button_next"
            tools:srcCompat="@android:drawable/ic_media_next"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/uicolor"
            android:contentDescription="Next"/>
    </androidx.cardview.widget.CardView>

</LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/author"
        android:textAlignment="center"
        android:gravity="center"
        android:textColor="@color/black"
        android:textSize="6sp"/>
</LinearLayout>